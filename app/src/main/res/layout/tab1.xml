<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/fragment_tab1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onClick">

    <include
        android:id="@+id/header_rec_view_electro"
        layout="@layout/header_rec_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycViewElectro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/header_rec_view_electro"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorBackgroundHeader">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
