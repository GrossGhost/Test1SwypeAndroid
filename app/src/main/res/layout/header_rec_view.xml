<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/colorBackgroundHeader">

    <ImageButton
        android:id="@+id/btn_buy_guitar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:onClick="buyGuitar"
        android:visibility="invisible"
        app:srcCompat="@mipmap/ic_add_shopping_cart_white_24dp" />

    <ImageView
        android:id="@+id/header_list_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:paddingLeft="7dp"
        android:src="@android:drawable/btn_star" />

    <TextView
        android:id="@+id/header_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/header_list_img"
        android:text="Guitars"
        android:textAlignment="center"

        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="22sp" />

</RelativeLayout>